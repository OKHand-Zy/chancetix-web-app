model Tasks {
  id        String    @id  
  title     String
  status    TasksStatus
  label     labelsStatus
  priority  PrioritiesStatus
}
enum TasksStatus {
  backlog
  todo
  in_progress
  done
  canceled
}
enum labelsStatus {
  bug
  feature
  documentation
}
enum PrioritiesStatus {
  low
  medium
  high
}